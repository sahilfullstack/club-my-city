<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="7dp"
    android:orientation="vertical" >


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher"
        android:padding="5dp"/>


    <TextView
        android:id="@+id/ad_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView1"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Name" />


    <TextView
        android:id="@+id/ad_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ad_name"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_below="@+id/ad_name"
        android:textSize="14dp"
        android:text="Dec" />


    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_dec"
        android:layout_toRightOf="@+id/imageView1"
        android:textSize="13dp"
        android:textStyle="bold"
        android:text="ADDRESS" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_toRightOf="@+id/imageView1"
        android:src="@drawable/phone" />

    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_toRightOf="@+id/imageView2"
        android:text="Mobile No"
        android:textColor="#239514"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView1"
        android:text="email Address"
        android:textColor="#FD0303"
        android:textSize="12dp" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/email"
        android:layout_alignParentRight="true"
        android:src="@drawable/offericon" />

    <TextView
        android:id="@+id/textView1"
        android:textColor="#99a8ce"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_below="@+id/email"
        android:text="Please Don't Forget To Mention 'BareillyInfo'" />

</RelativeLayout>